@Article{Gkorezis2021,
  author         = {Gkorezis, Panagiotis and Georgiou, Konstantina and Nikolaou, Ioannis and Kyriazati, Anna},
  journal        = {European Journal of Work and Organizational Psychology},
  title          = {Gamified or traditional situational judgement test? {A} moderated mediation model of recommendation intentions via organizational attractiveness},

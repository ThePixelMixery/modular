  url            = {https://www.sciencedirect.com/science/article/pii/S1053482216300687},
  urldate        = {2022-04-19},
}

 
@Article{Armstrong2017,
  author         = {Armstrong, Michael B. and Landers, Richard N.},
  journal        = {Simulation \& Gaming},
  title          = {An {Evaluation} of {Gamified} {Training}: {Using} {Narrative} to {Improve} {Reactions} and {Learning}},

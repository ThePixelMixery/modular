@Article{Landers2020,
  author         = {Landers, Richard N. and Auer, Elena M. and Abraham, Joseph D.},
  journal        = {Journal of Managerial Psychology},
  title          = {Gamifying a situational judgment test with immersion and control game elements: {Effects} on applicant reactions and construct validity},
  year           = {2020},

  url            = {https://doi.org/10.1177/1046878118762534},
  urldate        = {2022-04-19},
}

 
@Article{Groening2019,
  author         = {Groening, Christopher and Binnewies, Carmen},
  journal        = {Computers in Human Behavior},
  title          = {“{Achievement} unlocked!” - {The} impact of digital achievements as a gamification element on motivation and performance},
  year           = {2019},
  issn           = {0747-5632},
  month          = aug,
  pages          = {151--166},
  volume         = {97},
  abstract       = {Gamification experiences further growth in our society with broad practical implications of game design elements in applications, activities, and services. In our study, we focus on one single element in the form of digital achievements, one cornerstone of gamification, to gain unconfounded insights into the effects and working mechanisms of digital achievements. In a controlled experimental environment we investigate their impact on motivation and performance. Three research questions were investigated, first, if achievements are effective in enhancing motivation and performance, second, how achievements need to be designed to be effective, and third, if achievements' underlying working mechanisms resemble classical goal-setting. In three experiments, a total of 245 participants worked on different cognitive tasks. We experimentally manipulated several aspects of achievements, such as quantity and difficulty. We also compared achievements directly with classical goal-setting instructions. Results showed that achievements enhanced performance. Achievements also improved motivation, however only regarding persistence, not self-reported interest and enjoyment. The effectiveness of achievements was highly dependent on the design. Results suggest utilizing achievements with high difficulty and in low quantity. Results also support our assumption that achievements provide a direct goal-setting function. We conclude that achievements do benefit motivation and performance if designed properly.},
  doi            = {10.1016/j.chb.2019.02.026},
  file           = {:Groening2019 - “Achievement Unlocked!” the Impact of Digital Achievements As a Gamification Element on Motivation and Performance.pdf:PDF},
  keywords       = {Gamification, Achievements, Goal-setting, Motivation, Performance, Experiment},
  language       = {en},
  qualityassured = {qualityAssured},
  readstatus     = {skimmed},
  url            = {https://www.sciencedirect.com/science/article/pii/S074756321930086X},
  urldate        = {2022-04-19},
}

 

  file           = {:Sanchez2022 - Videogame Based Training_ the Impact and Interaction of Videogame Characteristics on Learning Outcomes.pdf:PDF},
  keywords       = {videogame-based training, game characteristics, training performance, human interaction, rules/goals clarity},
  language       = {en},
